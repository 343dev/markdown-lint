{
  "name": "@343dev/markdown-lint",
  "version": "2.0.1",
  "description": "Markdown code style linter",
  "keywords": [
    "markdown",
    "linter"
  ],
  "license": "MIT",
  "author": "Andrey Warkentin (https://github.com/343dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/343dev/markdown-lint"
  },
  "type": "module",
  "exports": "./index.js",
  "bin": {
    "markdown-lint": "./cli.js"
  },
  "files": [
    "lib/",
    ".markdownlintrc.cjs",
    "cli.js",
    "index.js"
  ],
  "scripts": {
    "lint-js": "eslint .",
    "lint-md": "./cli.js -r .",
    "lint": "npm run lint-js && npm run lint-md",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-git-hooks": "npx simple-git-hooks"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "eyo-kernel": "^2.5.6",
    "fdir": "^6.1.1",
    "prettier": "^3.2.5",
    "remark": "13.0.0",
    "remark-preset-lint-markdown-style-guide": "4.0.0",
    "remark-textr": "4.0.0",
    "typograf": "^7.4.0",
    "vfile-reporter": "^8.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-xo": "^0.44.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unicorn": "^51.0.1",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.md": "./cli.js --fix --typograph"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "xo",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "unicorn/prefer-module": "off",
      "unicorn/no-array-reduce": "off",
      "capitalized-comments": "off",
      "no-warning-comments": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  }
}
